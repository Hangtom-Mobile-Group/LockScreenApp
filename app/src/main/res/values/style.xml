<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="OverlayDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="ToggleSwitchButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="outerRadius">130dp</item>
        <item name="handleDrawable">@drawable/ic_launcher</item>
        <item name="upper">@android:drawable/ic_menu_crop</item>
        <item name="bottom">@android:drawable/ic_delete</item>
    </style>
</resources>